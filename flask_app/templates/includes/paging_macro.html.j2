{% macro render_paging(prev_url, next_url) -%}
  {% if prev_url %}
    <a href="{{ prev_url }}"><i class="fas fa-chevron-circle-left fa-3x me-5"></i></a>
  {% else %}
    <i class="fas fa-chevron-circle-left fa-3x text-light me-5"></i>
  {% endif %}

  {% if next_url %}
    <a href="{{ next_url }}"><i class="fas fa-chevron-circle-right fa-3x"></i></a>
  {% else %}
    <i class="fas fa-chevron-circle-right fa-3x text-light"></i>
  {% endif %}
{%- endmacro %}